<section class="deck-detail container">

  <% if @current_deck != nil%>
    <div class="deck-header">
      <p class="deck-name">
        <%= @current_deck.name %>
      </p>

      <% if @features != nil%>
        <ul class="feature-list">
          <% @features.each do |c|%>
            <li>
              <%= link_to c.name, deck_feature_path(@current_deck.id, c.id) %>
            </li>
          <% end %>
        </ul>
      <% end %> 
    </div> 
  <% end %>

  <div class="blog-create" data-collapse>
    <h3 class="tip">Create a new one</h3>
    <div>
    <%= form_for :blog, :url => deck_feature_blogs_path(@current_deck.id, @current_feature.id) do |f| %>
      <%= f.label :title, "title" %>
      <%= f.text_field :title %>
      <%= f.kindeditor :content %>
      <%= f.submit :value=> "submit", :class => "button" %>
    <% end %>
  </div>
  </div>

  <div class="blog-list">
    <% @blogs.each do |c|%>
      <div class="blog-item" id="<%= c.id %>">
        <h4 class="blog-title" id="<%= c.id %>">
            <%= c.title %>
          <span class="blog-date">
            <%= c.created_at.strftime("%d %b %y") %>
          </span>
        </h4>
        <div class="blog-content" id="<%= c.id %>" >
          <%= c.content.html_safe %>
        </div>
        <div class="edit-form" id="<%= c.id %>"></div>
        <div class="delete-link">
          <%= link_to "edit", "#", :class => "edit", :id =>c.id %>
          <%= link_to "cancel", "#", :class => "cancel", :id =>c.id %>
          <%= link_to "delete",deck_feature_blog_path(@current_deck.id, @current_feature.id, c.id),:confirm => "Are you sure?", :method => :delete, :class => "delete" %>
        </div>
      </div>
    <% end %> 
  </div> 
</div>